<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CreateQuizActivity">




    <LinearLayout
        android:id="@+id/quiz_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Quiz form -->

    <LinearLayout
        android:id="@+id/quiz_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- Circle Thumbnail with Image -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical" >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:orientation="vertical" >

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/prompt_question"
                    android:inputType="textPersonName"
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    bootstrap:be_roundedCorners="true"
                    bootstrap:be_state="success" />

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/alternative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/prompt_alternative"
                    android:inputType="textPersonName"
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    bootstrap:be_roundedCorners="true"
                    bootstrap:be_state="success"/>

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/alternative2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/prompt_alternative"
                    android:inputType="textPersonName"
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    bootstrap:be_roundedCorners="true"
                    bootstrap:be_state="success"/>

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/alternative3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/prompt_alternative"
                    android:inputType="textPersonName"
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    bootstrap:be_roundedCorners="true"
                    bootstrap:be_state="success"/>

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/alternative4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/prompt_alternative"
                    android:inputType="textPersonName"
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    bootstrap:be_roundedCorners="true"
                    bootstrap:be_state="success"/>


                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/btnRegisterQuiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:minHeight="?android:attr/listPreferredItemHeight"
                    style="?android:attr/buttonBarButtonStyle"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:text="@string/create_quiz"
                    bootstrap:bb_roundedCorners="true"
                    bootstrap:bb_type="success"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>